<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="android:Theme">
        <!-- Customize your theme here.
        <item name="android:windowTitleSize">50dp</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 微博九宫格图片style -->
    <style name="GridViewImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:cacheColorHint">#efeaea</item>
        <item name="android:listSelector">#efeaea</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- 字体样式 -->
    <style name="BlackBoldTextStyle">
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="ListViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>
