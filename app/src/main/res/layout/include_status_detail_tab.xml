<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pwb_ll_status_detail"
        android:background="@color/white"
        android:orientation="horizontal"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/pwb_tv_share"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="@dimen/txtsize_subhead"
            android:textColor="@color/txt_black"
            android:background="@color/white"
            android:gravity="center"
            android:text="转发"/>

        <TextView
            android:id="@+id/pwb_tv_comment"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="@dimen/txtsize_subhead"
            android:textColor="@color/txt_black"
            android:background="@color/white"
            android:gravity="center"
            android:text="评论"/>

        <TextView
            android:id="@+id/pwb_tv_praise"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="@dimen/txtsize_subhead"
            android:textColor="@color/txt_black"
            android:background="@color/white"
            android:gravity="center"
            android:text="赞"/>

    </LinearLayout>

    <com.panda.pweibo.widget.Underline
        android:id="@+id/pwb_ul_status_detail"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

</LinearLayout>