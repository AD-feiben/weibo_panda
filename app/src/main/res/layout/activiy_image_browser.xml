<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_black">

    <android.support.v4.view.ViewPager
        android:id="@+id/pwb_vp_image_brower"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/pwb_tv_image_index"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textSize="@dimen/txtsize_headline"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="1/9"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/pwb_btn_save"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:background="@drawable/shape_oval_rect_agray"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/pwb_save"
            android:textColor="@color/white"/>

        <Button
        android:id="@+id/pwb_btn_orgin"
        android:layout_width="56dp"
        android:layout_height="36dp"
            android:layout_marginLeft="16dp"
        android:background="@drawable/shape_oval_rect_agray"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/pwb_orgin"
        android:textColor="@color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/pwb_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/shape_oval_rect_agray"
            android:drawableLeft="@drawable/preview_unlike_btn"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="èµž"
            android:textSize="@dimen/txtsize_subhead"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>